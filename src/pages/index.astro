---
import '@/styles/globals.css';
import InfoCard from '@/components/infoCard.astro';

---
<head>
  <meta charset="utf-8" />
  <script defer src="https://cdn.jsdelivr.net/npm/@alpinejs/collapse@3.x.x/dist/cdn.min.js"></script>
</head>
<video autoplay muted loop id="myVideo">
  <source src="/chainsaw-man-girls-moewalls-com.mp4" type="video/mp4">
</video>
<div x-data="{ open: false, toggle() { this.open = ! this.open } }">
<div  class="flex items-center justify-center min-h-screen">
  <button @click="toggle()" class="border-2 bg-gray-950 text-zinc-400 font-bold py-2 px-6 rounded hover:bg-neutral-950 hover:text-indigo-900">
    info
  </button>
</div>

<div x-show="open">
  <InfoCard />
</div>
</div>
<style>
  /* Make the video cover the entire viewport */
  #myVideo {
    position: fixed;
    right: 0;
    bottom: 0;
    min-width: 100%;
    min-height: 100%;
    z-index: -1; /* Put the video behind other content */
  }
</style>
<script defer src="https://cdn.jsdelivr.net/npm/@alpinejs/collapse@3.x.x/dist/cdn.min.js"></script>
